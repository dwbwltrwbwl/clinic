<Page x:Class="clinic.Pages.DataOutput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="DataOutput">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height ="Auto"/>
            <RowDefinition Height ="5*"/>
            <RowDefinition Height ="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск" FontSize="14" FontWeight="Bold"/>
                <TextBox TextWrapping="Wrap" Width="200" Height="24" Margin="70,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Сортировка" FontSize="14" FontWeight="Bold"/>
                <ComboBox Width="200" Height="24" Margin="31,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Фильтрация" FontSize="14" FontWeight="Bold"/>
                <ComboBox Width="200" Height="24" Margin="28,0,0,0"/>
            </StackPanel>
        </StackPanel>
        <ListView x:Name="listReceptions" Grid.Row="1" ToolTip="Список приёмов" Background="#ffdbd6">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="500"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <!--<Image Grid.Column="0" Source="{Binding CurrentPhoto}"></Image>-->
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="5" Grid.Column="1">
                                <TextBlock Width="auto" TextWrapping="Wrap" Height="auto" Text="{Binding id_reception}" FontWeight="Bold" FontSize="16" Foreground="#FF0027FF"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="2" Margin="5">
                                
                            </StackPanel>
                        </Grid>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="Добавить" Width="120" Height="24" Click="AddButton_Click" ToolTip="Добавить" Grid.Column="0" HorizontalAlignment="Left" FontSize="14"/>
            <!--<TextBlock x:Name="TextFoundCount" Text="Найдено: 0" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="2"/>-->
        </Grid>
    </Grid>
</Page>
