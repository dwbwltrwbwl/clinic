<Page x:Class="clinic.Pages.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Autorization">

    <Grid Background="#fcc4bd">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TBLogin" HorizontalAlignment="Left" Margin="305,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" RenderTransformOrigin="0.5,0.5" Height="24" FontSize="14">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.087"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.001"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBlock HorizontalAlignment="Left" Margin="305,209,0,0" TextWrapping="Wrap" Text="Введите логин" VerticalAlignment="Top" Width="120" Height="20" FontWeight="Bold" FontSize="14"/>
        <PasswordBox x:Name="PBPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Width="210" Height="24" FontSize="14" Margin="305,270,0,0"/>
        <Button x:Name="ButtonVhod" HorizontalAlignment="Left" Margin="305,303,0,0" VerticalAlignment="Top" Width="210" Content="Войти" Height="24" Click="ButtonVhod_Click" FontSize="14"/>
        <Button x:Name="ButtonRegistr" Content="Регистрация" HorizontalAlignment="Left" Margin="305,332,0,0" VerticalAlignment="Top" Width="210" Height="24" Click="ButtonRegistr_Click" FontSize="14"/>
        <TextBlock Margin="317,164,0,0" Text="Авторизация" VerticalAlignment="Top" Width="186" FontSize="22" HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Height="30" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="305,250,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="120" Height="20" FontWeight="Bold" FontSize="14"/>
    </Grid>
</Page>
