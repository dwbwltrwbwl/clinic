<Page x:Class="clinic.Pages.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Autorization">

    <Grid Background="#fcc4bd">
        <!-- Центральный контейнер с выравниванием по центру -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Заголовок -->
            <TextBlock Text="Авторизация" 
                      FontSize="22" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Поле логина -->
            <TextBlock Text="Введите логин" 
                      FontWeight="Bold" 
                      FontSize="14"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,5"/>

            <TextBox x:Name="TBLogin" 
                    Width="210" 
                    Height="24" 
                    FontSize="14" 
                    MaxLength="50"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0.087"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.001"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>

            <!-- Поле пароля -->
            <TextBlock Text="Введите пароль" 
                      FontWeight="Bold" 
                      FontSize="14"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,5"/>

            <PasswordBox x:Name="PBPassword" 
                        MaxLength="50" 
                        Width="210" 
                        Height="24" 
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>

            <!-- Кнопка входа -->
            <Button x:Name="ButtonVhod" 
                    Content="Войти" 
                    Width="210" 
                    Height="24" 
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"
                    Click="ButtonVhod_Click"/>

            <!-- Кнопка регистрации -->
            <Button x:Name="ButtonRegistr" 
                    Content="Регистрация" 
                    Width="210" 
                    Height="24" 
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Click="ButtonRegistr_Click"/>
        </StackPanel>
    </Grid>
</Page>