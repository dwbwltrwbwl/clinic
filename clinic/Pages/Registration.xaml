<Page x:Class="clinic.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:clinic.Pages"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Registration">

    <Grid Background="#fcc4bd">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Width="600" Margin="0,20" HorizontalAlignment="Center">
                <!-- Заголовок -->
                <TextBlock Text="Регистрация" 
                         FontSize="22" 
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,20"/>

                <!-- Первая строка -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка -->
                    <StackPanel Grid.Column="0" Margin="10">
                        <TextBlock Text="Введите фамилию:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <TextBox x:Name="TBSurname" 
                                MaxLength="50" 
                                Height="24" 
                                FontSize="14"
                                PreviewTextInput="TextBox_PreviewTextInput"
                                Margin="0,5,0,15"/>

                        <TextBlock Text="Введите имя:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <TextBox x:Name="TBName" 
                                MaxLength="50" 
                                Height="24" 
                                FontSize="14"
                                PreviewTextInput="TextBox_PreviewTextInput"
                                Margin="0,5,0,15"/>

                        <TextBlock Text="Введите отчество:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <TextBox x:Name="TBMiddleName" 
                                MaxLength="50" 
                                Height="24" 
                                FontSize="14"
                                PreviewTextInput="TextBox_PreviewTextInput"
                                Margin="0,5,0,15"/>
                    </StackPanel>

                    <!-- Правая колонка -->
                    <StackPanel Grid.Column="1" Margin="10">
                        <TextBlock Text="Введите номер полиса:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <TextBox x:Name="TBPolice" 
                                MaxLength="50" 
                                Height="24" 
                                FontSize="14"
                                Margin="0,5,0,15"/>

                        <TextBlock Text="Выберите участок:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <ComboBox x:Name="ComboBoxSite" 
                                 Height="24" 
                                 FontSize="14"
                                 Margin="0,5,0,15"/>

                        <TextBlock Text="Введите телефон:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <TextBox x:Name="TBTelephone" 
                                MaxLength="20" 
                                Height="24" 
                                FontSize="14"
                                PreviewTextInput="TBTelephone_PreviewTextInput"
                                TextChanged="TBTelephone_TextChanged"
                                Margin="0,5,0,15"/>
                    </StackPanel>
                </Grid>

                <!-- Вторая строка -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка -->
                    <StackPanel Grid.Column="0" Margin="10">
                        <TextBlock Text="Введите дату рождения:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <DatePicker x:Name="DPDateOfBirth" 
                                   DisplayDateEnd="{x:Static sys:DateTime.Today}" 
                                   Height="24" 
                                   FontSize="14"
                                   Margin="0,5,0,15"/>

                        <TextBlock Text="Введите пол:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <ComboBox x:Name="CBGender" 
                                  Height="24" 
                                  FontSize="14" 
                                  Margin="0,5,0,15">
                        </ComboBox>
                    </StackPanel>

                    <!-- Правая колонка -->
                    <StackPanel Grid.Column="1" Margin="10">
                        <TextBlock Text="Введите логин:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <TextBox x:Name="TBLogin" 
                                MaxLength="50" 
                                Height="24" 
                                FontSize="14"
                                Margin="0,5,0,15"/>

                        <TextBlock Text="Введите пароль:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <TextBox x:Name="TBPassword" 
                                MaxLength="50" 
                                Height="24" 
                                FontSize="14"
                                Margin="0,5,0,15"/>

                        <TextBlock Text="Введите пароль повторно:" 
                                 FontWeight="Bold" 
                                 FontSize="14"/>
                        <PasswordBox x:Name="PBpassword" 
                                   MaxLength="50" 
                                   Height="24" 
                                   FontSize="14"
                                   PasswordChanged="PasswordBox_PasswordChanged"
                                   Margin="0,5,0,15"/>
                    </StackPanel>
                </Grid>

                <!-- Кнопки -->
                <StackPanel HorizontalAlignment="Center" Margin="0,20">
                    <Button x:Name="ButtonRegist" 
                           Content="Зарегистрироваться" 
                           Width="210" 
                           Height="24" 
                           FontSize="14"
                           Click="ButtonRegist_Click"
                           Margin="0,0,0,10"/>

                    <Button x:Name="ButtonExit" 
                           Content="Назад" 
                           Width="210" 
                           Height="24" 
                           FontSize="14"
                           Click="ButtonExit_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>