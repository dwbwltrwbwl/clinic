<Page x:Class="clinic.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Registration">

    <Grid Background="#fcc4bd">
        <TextBlock HorizontalAlignment="Left" Margin="196,102,0,0" TextWrapping="Wrap" Text="Введите имя:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Width="102" />
        <TextBox x:Name="TBName" HorizontalAlignment="Left" Margin="196,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="418,102,0,0" TextWrapping="Wrap" Text="Введите логин:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="TBLogin" HorizontalAlignment="Left" Margin="418,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" FontSize="14" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="196,314,0,0" TextWrapping="Wrap" Text="Введите телефон:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="418,155,0,0" TextWrapping="Wrap" Text="Введите пароль:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <PasswordBox x:Name="PBpassword" HorizontalAlignment="Left" VerticalAlignment="Top" Width="204" Password="" PasswordChanged="PasswordBox_PasswordChanged" Margin="418,232,0,0" FontSize="14" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="418,208,0,0" TextWrapping="Wrap" Text="Введите пароль повторно:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="ButtonRegist" Content="Зарегистрироваться" HorizontalAlignment="Center" Margin="0,378,0,0" VerticalAlignment="Top" Width="204" Click="ButtonRegist_Click" FontSize="14" Height="24"/>
        <TextBox x:Name="TBTelephone" HorizontalAlignment="Left" Margin="196,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>
        <Button x:Name="ButtonExit" Content="Назад" HorizontalAlignment="Center" Margin="0,404,0,0" VerticalAlignment="Top" Width="204" Click="ButtonExit_Click" FontSize="14" Height="24"/>
        <TextBlock Margin="0,52,0,0" Text="Регистрация" VerticalAlignment="Top" Width="166" FontSize="22" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Height="31" FontWeight="Bold"/>
        <TextBox x:Name="TBPassword" HorizontalAlignment="Left" Margin="418,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" FontSize="14" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="196,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"><Run Text="Введите "/><Run Language="ru-ru" Text="фамилию"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="TBSurname" HorizontalAlignment="Left" Margin="196,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="196,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"><Run Text="Введите "/><Run Language="ru-ru" Text="отчество"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="TBMiddleName" HorizontalAlignment="Left" Margin="196,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="196,261,0,0" TextWrapping="Wrap" Text="Выберите специализацию:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Width="204"/>
        <ComboBox x:Name="ComboBoxSpecializations" HorizontalAlignment="Left" Margin="196,285,0,0" VerticalAlignment="Top" Width="204" FontSize="14" Height="24"/>

    </Grid>
</Page>
