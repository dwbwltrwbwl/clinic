<Page x:Class="clinic.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:clinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Registration">
    <Grid Background="#fcc4bd">
        <TextBlock HorizontalAlignment="Left" Margin="187,126,0,0" TextWrapping="Wrap" Text="Введите имя:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Width="102" />
        <TextBox x:Name="TBName" HorizontalAlignment="Left" Margin="187,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="431,232,0,0" TextWrapping="Wrap" Text="Введите логин:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="TBLogin" HorizontalAlignment="Left" Margin="431,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" FontSize="14" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="431,179,0,0" TextWrapping="Wrap" Text="Введите телефон:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="431,285,0,0" TextWrapping="Wrap" Text="Введите пароль:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <PasswordBox x:Name="PBpassword" HorizontalAlignment="Left" VerticalAlignment="Top" Width="204" Password="" PasswordChanged="PasswordBox_PasswordChanged" Margin="431,362,0,0" FontSize="14" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="431,338,0,0" TextWrapping="Wrap" Text="Введите пароль повторно:" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="ButtonRegist" Content="Зарегистрироваться" HorizontalAlignment="Center" Margin="0,395,0,0" VerticalAlignment="Top" Width="204" Click="ButtonRegist_Click" FontSize="14" Height="24"/>
        <TextBox x:Name="TBTelephone" HorizontalAlignment="Left" Margin="431,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>
        <Button x:Name="ButtonExit" Content="Назад" HorizontalAlignment="Center" Margin="0,421,0,0" VerticalAlignment="Top" Width="204" Click="ButtonExit_Click" FontSize="14" Height="24"/>
        <TextBlock Margin="0,10,0,0" Text="Регистрация" VerticalAlignment="Top" Width="166" FontSize="22" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Height="31" FontWeight="Bold"/>
        <TextBox x:Name="TBPassword" HorizontalAlignment="Left" Margin="431,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" FontSize="14" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="187,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"><Run Text="Введите "/><Run Language="ru-ru" Text="фамилию"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="TBSurname" HorizontalAlignment="Left" Margin="187,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="187,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"><Run Text="Введите "/><Run Language="ru-ru" Text="отчество"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="TBMiddleName" HorizontalAlignment="Left" Margin="187,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="431,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Width="204"><Run Text="Выберите "/><Run Language="ru-ru" Text="участок"/><Run Text=":"/></TextBlock>
        <ComboBox x:Name="ComboBoxSite" HorizontalAlignment="Left" Margin="431,150,0,0" VerticalAlignment="Top" Width="204" FontSize="14" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="187,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"><Run Text="Введите "/><Run Text="дату рождени"/><Run Text="я:"/></TextBlock>
        <DatePicker x:Name="DPDateOfBirth" HorizontalAlignment="Left" Margin="187,256,0,0" VerticalAlignment="Top" FontSize="14" Width="204" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="187,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"><Run Text="Введите "/><Run Language="ru-ru" Text="пол"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="TBGender" HorizontalAlignment="Left" Margin="187,309,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,73,209,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"><Run Text="Введите "/><Run Language="ru-ru" Text="номер полиса"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="TBPolice" HorizontalAlignment="Left" Margin="431,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="24" FontSize="14"/>

    </Grid>
</Page>
